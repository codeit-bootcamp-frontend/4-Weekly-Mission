{
  "compilerOptions": {
    "target": "es5", // 컴파일된 코드의 ECMAScript 대상 버전
    "module": "esnext", // 모듈 코드 생성 형식
    "strict": true, // 엄격한 타입 검사 활성화
    "esModuleInterop": true, // CommonJS 및 ES 모듈 호환성
    "moduleResolution": "node",
    "skipLibCheck": true, // 라이브러리 검사 생략
    "forceConsistentCasingInFileNames": true, // 파일 이름의 일관된 대/소문자 강제
    "jsx": "react", // JSX 지원
    "allowSyntheticDefaultImports": true, // default import를 허용
    "baseUrl": ".", // 모듈 import 경로의 기준 디렉토리
    "paths": {
      "@/*": ["src/*"] // 사용자 정의 경로 별칭 설정
    },
    "typeRoots": ["src/types"],
    "resolveJsonModule": true,
    "noResolve": false
  },
  "include": ["src/**/*"] // 컴파일할 소스 파일 및 디렉토리 패턴
}
